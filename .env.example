# FedRamp Gap Analysis Agent - Environment Configuration (Demo Version)
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=FedRamp Gap Analysis Agent
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_WORKERS=1

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Database Settings (SQLite for demo - no PostgreSQL needed)
DATABASE_URL=sqlite+aiosqlite:///./fedramp.db
DATABASE_ECHO=false

# Analysis Settings
MAX_FILE_SIZE_MB=50
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=1800
ENABLE_CACHING=false

# Report Settings
REPORT_OUTPUT_DIR=./reports
REPORT_FORMATS=json,html

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Feature Flags (Simplified for demo)
ENABLE_PDF_PARSING=true
ENABLE_DOCX_PARSING=true
ENABLE_CONFLUENCE=false
ENABLE_GIT_ANALYSIS=true
ENABLE_JAVA_ANALYSIS=true
ENABLE_DEPENDENCY_CHECK=true
ENABLE_WXO_INTEGRATION=false

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090

# Git Settings (for repository analysis)
GIT_CLONE_DIR=./temp/repos
GIT_MAX_REPO_SIZE_MB=500
GIT_TIMEOUT=300

# Optional: Confluence Settings (disabled by default for demo)
# CONFLUENCE_URL=https://your-domain.atlassian.net
# CONFLUENCE_USERNAME=your-email@example.com
# CONFLUENCE_API_TOKEN=your-api-token
# CONFLUENCE_SPACE_KEY=your-space-key

# Optional: watsonx.ai Settings (disabled by default for demo)
# WXO_API_KEY=your-ibm-cloud-api-key
# WXO_PROJECT_ID=your-project-id
# WXO_URL=https://us-south.ml.cloud.ibm.com
# WXO_MODEL_ID=ibm/granite-13b-chat-v2