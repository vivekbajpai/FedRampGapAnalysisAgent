{
  "metadata": {
    "title": "FedRAMP High Baseline Controls",
    "version": "NIST 800-53 Rev 5",
    "baseline": "High",
    "total_controls": 421,
    "last_updated": "2026-02-06"
  },
  "controls": [
    {
      "control_id": "AC-1",
      "control_name": "Access Control Policy and Procedures",
      "control_family": "AC",
      "baseline": "High",
      "description": "Develop, document, and disseminate access control policy and procedures",
      "implementation_guidance": "Create comprehensive access control policy covering all aspects of user access management",
      "patterns": ["AccessControlPolicy", "PolicyDocument", "AccessProcedures"],
      "keywords": ["policy", "procedures", "access control", "documentation"],
      "verification_methods": ["policy_review", "documentation_check"]
    },
    {
      "control_id": "AC-2",
      "control_name": "Account Management",
      "control_family": "AC",
      "baseline": "High",
      "description": "Manage information system accounts including establishment, activation, modification, review, disabling, and removal",
      "implementation_guidance": "Implement automated account management system with approval workflows and audit trails",
      "patterns": ["UserDetailsService", "UserRepository", "AccountService", "UserManagement", "createUser", "deleteUser", "disableUser"],
      "keywords": ["user", "account", "registration", "provisioning", "deprovisioning", "lifecycle"],
      "verification_methods": ["code_review", "authentication_test", "user_management_test"],
      "required_features": ["account_creation", "account_modification", "account_disabling", "account_removal", "periodic_review"]
    },
    {
      "control_id": "AC-3",
      "control_name": "Access Enforcement",
      "control_family": "AC",
      "baseline": "High",
      "description": "Enforce approved authorizations for logical access to information and system resources",
      "implementation_guidance": "Implement role-based access control (RBAC) with fine-grained permissions",
      "patterns": ["@PreAuthorize", "@Secured", "@RolesAllowed", "hasRole", "hasAuthority", "AccessDecisionVoter"],
      "keywords": ["authorization", "access control", "permission", "role", "privilege", "rbac"],
      "verification_methods": ["authorization_test", "rbac_test", "access_control_test"],
      "required_features": ["role_based_access", "permission_checks", "access_denial"]
    },
    {
      "control_id": "AC-6",
      "control_name": "Least Privilege",
      "control_family": "AC",
      "baseline": "High",
      "description": "Employ the principle of least privilege, allowing only authorized accesses for users",
      "implementation_guidance": "Implement fine-grained permissions and regularly review user privileges",
      "patterns": ["@PreAuthorize", "hasAuthority", "minimumPrivilege", "roleHierarchy"],
      "keywords": ["least privilege", "minimum access", "need to know", "privilege escalation"],
      "verification_methods": ["privilege_review", "access_audit"],
      "required_features": ["minimal_permissions", "privilege_separation", "regular_review"]
    },
    {
      "control_id": "AC-7",
      "control_name": "Unsuccessful Logon Attempts",
      "control_family": "AC",
      "baseline": "High",
      "description": "Enforce a limit on consecutive invalid logon attempts and take action when exceeded",
      "implementation_guidance": "Implement account lockout after 3-5 failed login attempts with automatic unlock after time period",
      "patterns": ["AuthenticationFailureHandler", "BadCredentialsException", "LockedException", "loginAttempts", "failedLoginCount"],
      "keywords": ["failed login", "account lockout", "brute force", "login attempts", "authentication failure"],
      "verification_methods": ["login_attempt_test", "account_lockout_test"],
      "required_features": ["attempt_tracking", "account_lockout", "lockout_duration", "admin_unlock"]
    },
    {
      "control_id": "AC-12",
      "control_name": "Session Termination",
      "control_family": "AC",
      "baseline": "High",
      "description": "Automatically terminate a user session after a defined condition",
      "implementation_guidance": "Configure session timeout (15-30 minutes of inactivity) and implement logout functionality",
      "patterns": ["sessionManagement", "maximumSessions", "sessionTimeout", "invalidateHttpSession"],
      "keywords": ["session", "timeout", "termination", "logout", "inactivity"],
      "verification_methods": ["session_timeout_test", "logout_test"],
      "required_features": ["session_timeout", "automatic_logout", "manual_logout"]
    },
    {
      "control_id": "AU-2",
      "control_name": "Audit Events",
      "control_family": "AU",
      "baseline": "High",
      "description": "Identify the types of events that the system is capable of logging",
      "implementation_guidance": "Log all security-relevant events including authentication, authorization, data access, and configuration changes",
      "patterns": ["@Audit", "AuditLogger", "EventLogger", "SecurityAuditLogger", "log.audit", "auditEvent"],
      "keywords": ["audit", "logging", "event", "trail", "record", "security events"],
      "verification_methods": ["audit_log_review", "event_logging_test"],
      "required_features": ["authentication_logging", "authorization_logging", "data_access_logging", "config_change_logging"]
    },
    {
      "control_id": "AU-3",
      "control_name": "Content of Audit Records",
      "control_family": "AU",
      "baseline": "High",
      "description": "Ensure audit records contain information that establishes what, when, where, and who",
      "implementation_guidance": "Include timestamp, user ID, event type, outcome, and source/destination in all audit records",
      "patterns": ["AuditEvent", "LogEntry", "timestamp", "userId", "eventType", "outcome", "MDC.put"],
      "keywords": ["audit content", "log format", "event details", "timestamp", "user id", "structured logging"],
      "verification_methods": ["audit_content_review", "log_format_test"],
      "required_features": ["timestamp", "user_identification", "event_type", "event_outcome", "source_destination"]
    },
    {
      "control_id": "AU-6",
      "control_name": "Audit Review, Analysis, and Reporting",
      "control_family": "AU",
      "baseline": "High",
      "description": "Review and analyze information system audit records for indications of inappropriate activity",
      "implementation_guidance": "Implement automated log analysis and alerting for suspicious activities",
      "patterns": ["LogAnalyzer", "AuditReview", "SecurityMonitoring", "AlertService"],
      "keywords": ["audit review", "log analysis", "monitoring", "alerting", "anomaly detection"],
      "verification_methods": ["log_review_test", "alert_test"],
      "required_features": ["log_aggregation", "automated_analysis", "alerting", "reporting"]
    },
    {
      "control_id": "AU-9",
      "control_name": "Protection of Audit Information",
      "control_family": "AU",
      "baseline": "High",
      "description": "Protect audit information and audit logging tools from unauthorized access, modification, and deletion",
      "implementation_guidance": "Implement write-once audit logs with restricted access and integrity protection",
      "patterns": ["AuditProtection", "ImmutableLogs", "LogIntegrity", "SecureAuditStorage"],
      "keywords": ["audit protection", "log integrity", "tamper-proof", "secure storage"],
      "verification_methods": ["audit_protection_test", "integrity_check"],
      "required_features": ["write_once_logs", "access_restrictions", "integrity_verification"]
    },
    {
      "control_id": "AU-12",
      "control_name": "Audit Generation",
      "control_family": "AU",
      "baseline": "High",
      "description": "Provide audit record generation capability for auditable events",
      "implementation_guidance": "Implement comprehensive audit logging framework that captures all required events",
      "patterns": ["@Audit", "AuditAspect", "EventPublisher", "AuditEventListener"],
      "keywords": ["audit generation", "event capture", "logging framework"],
      "verification_methods": ["audit_generation_test", "event_capture_test"],
      "required_features": ["event_capture", "audit_record_creation", "log_persistence"]
    },
    {
      "control_id": "IA-2",
      "control_name": "Identification and Authentication (Organizational Users)",
      "control_family": "IA",
      "baseline": "High",
      "description": "Uniquely identify and authenticate organizational users",
      "implementation_guidance": "Implement strong authentication mechanism with unique user identifiers",
      "patterns": ["AuthenticationManager", "AuthenticationProvider", "UserDetailsService", "authenticate", "login"],
      "keywords": ["authentication", "login", "identity", "credentials", "verify", "user identification"],
      "verification_methods": ["authentication_test", "identity_verification_test"],
      "required_features": ["unique_identification", "authentication_mechanism", "credential_verification"]
    },
    {
      "control_id": "IA-2(1)",
      "control_name": "Multi-Factor Authentication to Privileged Accounts",
      "control_family": "IA",
      "baseline": "High",
      "description": "Implement multi-factor authentication for access to privileged accounts",
      "implementation_guidance": "Require MFA (TOTP, SMS, hardware token) for all administrative and privileged accounts",
      "patterns": ["MfaProvider", "TwoFactorAuthentication", "OtpService", "TotpGenerator", "mfaEnabled"],
      "keywords": ["mfa", "2fa", "multi-factor", "two-factor", "otp", "totp", "privileged access"],
      "verification_methods": ["mfa_test", "two_factor_test", "privileged_access_test"],
      "required_features": ["mfa_enrollment", "totp_generation", "mfa_verification", "backup_codes"]
    },
    {
      "control_id": "IA-2(2)",
      "control_name": "Multi-Factor Authentication to Non-Privileged Accounts",
      "control_family": "IA",
      "baseline": "High",
      "description": "Implement multi-factor authentication for access to non-privileged accounts",
      "implementation_guidance": "Extend MFA requirement to all user accounts accessing sensitive data",
      "patterns": ["MfaProvider", "TwoFactorAuthentication", "OtpService", "universalMfa"],
      "keywords": ["mfa", "2fa", "multi-factor", "all users", "universal mfa"],
      "verification_methods": ["universal_mfa_test"],
      "required_features": ["universal_mfa", "user_enrollment", "mfa_enforcement"]
    },
    {
      "control_id": "IA-5",
      "control_name": "Authenticator Management",
      "control_family": "IA",
      "baseline": "High",
      "description": "Manage information system authenticators by verifying identity, establishing initial content, and ensuring strength",
      "implementation_guidance": "Implement password policy with complexity requirements, expiration, and secure storage",
      "patterns": ["PasswordEncoder", "BCryptPasswordEncoder", "PasswordPolicy", "PasswordValidator", "passwordStrength"],
      "keywords": ["password", "authenticator", "credential", "password policy", "complexity", "hashing"],
      "verification_methods": ["password_policy_test", "credential_management_test", "hashing_test"],
      "required_features": ["password_complexity", "password_hashing", "password_expiration", "password_history"]
    },
    {
      "control_id": "IA-5(1)",
      "control_name": "Password-Based Authentication",
      "control_family": "IA",
      "baseline": "High",
      "description": "Enforce minimum password complexity and change of characters when new passwords are created",
      "implementation_guidance": "Require passwords with minimum 12 characters, mixed case, numbers, and special characters",
      "patterns": ["PasswordValidator", "PasswordComplexity", "PasswordStrengthChecker"],
      "keywords": ["password complexity", "password strength", "password requirements"],
      "verification_methods": ["password_complexity_test"],
      "required_features": ["minimum_length", "character_variety", "complexity_check"]
    },
    {
